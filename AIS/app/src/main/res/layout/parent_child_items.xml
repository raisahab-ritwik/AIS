<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/textbox"
    android:cacheColorHint="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@+id/img"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="8sp"
            android:background="@drawable/profile_circle" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/image_view"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="----Name------"
            android:textColor="#dddfe2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:layout_toRightOf="@+id/image_view"
            android:orientation="horizontal"
            android:paddingLeft="5sp" >

            <TextView
                android:id="@+id/class_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_txt"
                android:layout_marginTop="2sp"
                android:text="Class: "
                android:textColor="#7d838a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/class_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_txt"
                android:layout_marginTop="2sp"
                android:layout_toRightOf="@+id/class_label"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="--class--"
                android:textColor="#b3b4b7"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_class"
            android:layout_marginTop="2sp"
            android:layout_toRightOf="@+id/image_view"
            android:orientation="horizontal"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp" >

            <TextView
                android:id="@+id/rollno_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_label"
                android:text="Roll No: "
                android:textColor="#7d838a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/roll_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_txt"
                android:layout_toRightOf="@+id/rollno_label"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="--roll--"
                android:textColor="#b3b4b7"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:padding="5sp"
        android:src="@drawable/off"/>

</RelativeLayout>