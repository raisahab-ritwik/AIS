<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:cacheColorHint="@android:color/transparent"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle" >

        <TextView
            android:id="@+id/txt_payment_period"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Activity Title :"
            android:textColor="#a4abb4"
            android:textSize="14sp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txtPaymentPeriod"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_payment_period"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true" />

        <!--
        <TextView
            android:id="@+id/marks_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/description_txt"
            android:layout_toLeftOf="@+id/marks_txt"
            android:text="Marks: "
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/marks_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/marks_label_txt"
            android:layout_alignBottom="@+id/marks_label_txt"
            android:layout_alignRight="@+id/teacher_txt"
            android:paddingRight="5sp"
            android:text="50"
            android:textColor="#a4abb4"
            android:textSize="12sp" />
        -->

        <TextView
            android:id="@+id/txt_payment_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_payment_period"
            android:layout_below="@+id/txt_payment_period"
            android:maxLines="2"
            android:padding="5sp"
            android:text="Details :"
            android:textColor="#a4abb4" />

        <TextView
            android:id="@+id/txtPaymentDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_payment_date"
            android:layout_alignBottom="@+id/txt_payment_date"
            android:layout_toRightOf="@+id/txt_payment_date"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txt_payment_amount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_payment_date"
            android:layout_below="@+id/txt_payment_date"
            android:maxLines="2"
            android:padding="5sp"
            android:text="Created By :"
            android:textColor="#a4abb4" />

        <TextView
            android:id="@+id/txtPaymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_payment_amount"
            android:layout_alignBottom="@+id/txt_payment_amount"
            android:layout_toRightOf="@+id/txt_payment_amount"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txt_createdon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_payment_amount"
            android:layout_below="@+id/txt_payment_amount"
            android:maxLines="2"
            android:padding="5sp"
            android:text="Created On :"
            android:textColor="#a4abb4" />

        <TextView
            android:id="@+id/txtCreatedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_createdon"
            android:layout_alignBottom="@+id/txt_createdon"
            android:layout_toRightOf="@+id/txt_createdon"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/download_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/attachment_view" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

    </RelativeLayout>


</RelativeLayout>