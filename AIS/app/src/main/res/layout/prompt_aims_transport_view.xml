<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Transport Code : "
            android:layout_weight="1"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tr_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMILRT15"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Route name:"
            android:layout_weight="1"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/route_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMILRT15"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pick Up Point"
            android:layout_weight="1"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/pick_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMILRT15"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Drop Point:"
            android:layout_weight="1"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/drop_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMILRT15"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_weight="1"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMILRT15"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>

</LinearLayout>