<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:cacheColorHint="@android:color/transparent"
    android:background="@drawable/textbox"
    android:paddingBottom="10dp"
    android:paddingTop="5dp" >

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="Title :"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textView_title"
                android:layout_toRightOf="@id/textView_title"
                android:padding="5dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title"
            >

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Description :"
                android:padding="5dp"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="1100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text_desc"
                android:layout_toRightOf="@id/text_desc"
                android:padding="5dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_desc" >

            <TextView
                android:id="@+id/textstudent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Student :"
                android:padding="5dp"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textstudent"
                android:layout_toRightOf="@id/textstudent"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_created_by">

        <TextView
            android:id="@+id/textdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Created Date :"
            android:padding="5dp"
            android:textColor="#808080"/>

        <TextView
            android:id="@+id/textViewCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textdate"
            android:padding="5dp"
            android:layout_toRightOf="@id/textdate"
            android:textColor="@android:color/white" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_student" >

            <TextView
                android:id="@+id/textcreated_by"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Created By :"
                android:padding="5dp"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/textViewCreatedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textcreated_by"
                android:padding="5dp"
                android:layout_toRightOf="@id/textcreated_by"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewComment"
        android:layout_alignParentRight="true"
        android:src="@drawable/viewcomment"
        android:layout_below="@+id/layout_created_date"
        android:padding="5dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewViewDoc"
        android:src="@drawable/get_doc_btn_daily"
        android:layout_below="@+id/layout_created_date"
        android:layout_toLeftOf="@id/imageViewComment"
        android:padding="5dp" />

</RelativeLayout>