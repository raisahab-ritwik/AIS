<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/box"
    android:cacheColorHint="@android:color/transparent"
    android:gravity="center" >


    <LinearLayout
        android:id="@+id/left_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/data_right_display"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Mobile Application Development"
            android:textColor="#bbc4cf"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/data_right_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/left_display"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/left_display"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:text="Status:"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:textColor="#bbc4cf"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/attachment_view" />

</RelativeLayout>