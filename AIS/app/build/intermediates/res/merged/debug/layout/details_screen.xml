<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:cacheColorHint="@android:color/transparent"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#025e81" >

        <TextView
            android:id="@+id/txt_payment_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Event Name :"
            android:textColor="#a4abb4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_payment_period"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--
        <TextView
            android:id="@+id/marks_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/description_txt"
            android:layout_toLeftOf="@+id/marks_txt"
            android:text="Marks: "
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/marks_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/marks_label_txt"
            android:layout_alignBottom="@+id/marks_label_txt"
            android:layout_alignRight="@+id/teacher_txt"
            android:paddingRight="5sp"
            android:text="50"
            android:textColor="#a4abb4"
            android:textSize="12sp" />
        -->

        <LinearLayout
            android:id="@+id/ll_desc"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_payment_period"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_payment_period"
                android:maxLines="2"
                android:padding="5sp"
                android:text="Description :"
                android:textColor="#a4abb4" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_desc"
                android:layout_alignBottom="@+id/txt_desc"
                android:layout_toRightOf="@+id/txt_desc"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_createdon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_payment_period"
            android:layout_below="@+id/ll_desc"
            android:maxLines="2"
            android:padding="5sp"
            android:text="Start Date :"
            android:textColor="#a4abb4" />

        <TextView
            android:id="@+id/txtStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_createdon"
            android:layout_alignBottom="@+id/txt_createdon"
            android:layout_toRightOf="@+id/txt_createdon"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
       <TextView
           android:id="@+id/txt_room_no_label"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="false"
           android:layout_toLeftOf="@+id/txtEndDate"
           android:padding="5dp"
           android:layout_below="@+id/ll_desc"
           android:text="End date :"
           android:textColor="#a4abb4"
           android:textSize="14sp" />

        <TextView
            android:id="@+id/txtEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/txt_createdon"
            android:layout_alignBottom="@+id/txt_createdon"
            android:layout_below="@+id/ll_desc"
            android:paddingRight="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>