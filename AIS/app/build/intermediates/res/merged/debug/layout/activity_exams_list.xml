<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bar_style"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:padding="5sp"
            android:src="@drawable/back_icon" />

        <View
            android:id="@+id/view1"
            android:layout_width="1sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_btn"
            android:layout_toRightOf="@+id/back_btn"
            android:background="#7a99b5" />

        <View
            android:layout_width="1sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_btn"
            android:layout_toRightOf="@+id/view1"
            android:background="#f2f6fa" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_btn"
            android:layout_alignTop="@+id/back_btn"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:paddingLeft="50sp"
            android:text="@string/exam_results"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_btn"
            android:layout_toLeftOf="@+id/view3"
            android:background="#7a99b5" />

        <View
            android:id="@+id/view3"
            android:layout_width="1sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_btn"
            android:layout_toLeftOf="@+id/graph_btn"
            android:background="#f2f6fa" />

        <ImageButton
            android:id="@+id/graph_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/header_text"
            android:layout_alignParentRight="true"
            android:layout_margin="2sp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/graph_button" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_layout"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#2c3745"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name: "
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/school_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#2c3745"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class: "
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/class_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll No: "
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/roll_no_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Term: "
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exam_term_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session: "
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/session_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_layout"
        android:layout_marginBottom="3sp"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:layout_marginTop="3sp"
        android:background="#212932" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="#2c3745"
            android:padding="2sp"
            android:weightSum="5" >

            <TextView
                android:id="@+id/text_title_subject"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1.4"
                android:text="Subjects"
                android:textColor="#dddfe2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_title_total_marks"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total Marks"
                android:textColor="#dddfe2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_title_marks_obtained"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Marks Obtained"
                android:textColor="#dddfe2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_title_grade"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Grade"
                android:textColor="#dddfe2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_title_remarks"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Remarks"
                android:textColor="#dddfe2"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/remarks_layout"
        android:layout_below="@+id/tab_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0sp"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <RelativeLayout
        android:id="@+id/remarks_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/box"
        android:padding="5sp" >

        <TextView
            android:id="@+id/rank_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank: "
            android:textColor="#808080"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rank_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rank_label"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/rank_label"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/remarks_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rank_label"
            android:text="Remarks: "
            android:textColor="#808080"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/remarks_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/remarks_label"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/remarks_label"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/comments_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remarks_label"
            android:text="Term Comments: "
            android:textColor="#808080"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comments_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/comments_label"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/comments_label"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/download_attchment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/remarks_label"
            android:src="@drawable/report_card_download" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/total_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/banner"
        android:layout_margin="5sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/box"
        android:paddingLeft="10sp"
        android:visibility="gone"
        android:paddingRight="10sp" >

        <ImageButton
            android:id="@+id/btn_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="25sp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/details_btn"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_consolidated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="25sp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/consolidated_btn"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/total_txt"
                android:layout_toLeftOf="@+id/total_txt"
                android:text="Total Marks: "
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/obtained_txt"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/obtained_txt"
                android:text="Marks Obtained: "
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/obtained_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/total_txt"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10sp"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>