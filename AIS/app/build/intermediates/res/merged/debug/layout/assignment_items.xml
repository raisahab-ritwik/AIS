<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:cacheColorHint="@android:color/transparent"
    android:paddingBottom="6dp" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/list_header"
        android:orientation="horizontal"
        android:paddingTop="2dp" >

        <TextView
            android:id="@+id/day_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:padding="2sp"
            android:layout_marginLeft="2sp"
            android:textColor="#f7fbff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/day_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:padding="2sp"
            android:text="01/04/2015"
            android:textSize="14sp"
            android:textColor="#f7fbff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:background="@drawable/rectangle" >

        <TextView
            android:id="@+id/subject_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:text="Subject"
            android:textColor="#4599ff"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/description_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject_txt"
            android:layout_toLeftOf="@+id/marks_txt"
            android:text="Title"
            android:maxLines="2"
            android:padding="5sp"
            android:textColor="#dddfe2" />
        
   <TextView
            android:id="@+id/teacher_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_txt"
            android:layout_toLeftOf="@+id/teacher_txt"
            android:gravity="bottom|right"
            android:text="Created by: "
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teacher_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img"
            android:layout_below="@+id/description_txt"
            android:gravity="bottom|right"
            android:paddingRight="5dp"
            android:text="Teacher name"
            android:textColor="#a4abb4"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:src="@drawable/arrow_right"
            android:textColor="@android:color/white" />
        
         <ImageView
            android:id="@+id/marks_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/description_txt"
            android:layout_toLeftOf="@+id/img"
            android:padding="5dp"
            android:layout_margin="5dp"
           android:background="@drawable/result_icon_assignment_test_activity"
            android:textColor="#a4abb4"
            android:textSize="12dp" />
         
          <ImageView
            android:id="@+id/img_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/attachment_view" />

        <!-- <TextView
            android:id="@+id/marks_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/description_txt"
            android:layout_toLeftOf="@+id/marks_txt"
            android:text="Marks: "
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/marks_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/marks_label_txt"
            android:layout_alignBottom="@+id/marks_label_txt"
            android:layout_alignRight="@+id/teacher_txt"
            android:paddingRight="5sp"
            android:text="50"
            android:textColor="#a4abb4"
            android:textSize="12sp" />

 -->    </RelativeLayout>

</RelativeLayout>