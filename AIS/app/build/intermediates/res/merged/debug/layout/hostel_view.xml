<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    android:cacheColorHint="@android:color/transparent"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle" >

        <TextView
            android:id="@+id/txt_hostel_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hostel Code :"
            android:textColor="#a4abb4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_hostel_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_hostel_code_label"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--
        <TextView
            android:id="@+id/marks_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/description_txt"
            android:layout_toLeftOf="@+id/marks_txt"
            android:text="Marks: "
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/marks_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/marks_label_txt"
            android:layout_alignBottom="@+id/marks_label_txt"
            android:layout_alignRight="@+id/teacher_txt"
            android:paddingRight="5sp"
            android:text="50"
            android:textColor="#a4abb4"
            android:textSize="12sp" />
        -->

        <TextView
            android:id="@+id/txt_hostel_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_hostel_code_label"
            android:layout_below="@+id/txt_hostel_code_label"
            android:maxLines="2"
            android:padding="5sp"
            android:text="Hostel Name :"
            android:textColor="#a4abb4" />

        <TextView
            android:id="@+id/txt_hostel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_hostel_name_label"
            android:layout_alignBottom="@+id/txt_hostel_name_label"
            android:layout_toRightOf="@+id/txt_hostel_name_label"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_room_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Room No. :"
            android:textColor="#4599ff"
            android:textSize="12sp"
            android:layout_above="@+id/txt_bed_no_label"
            android:layout_toLeftOf="@+id/txt_room_no"
            android:layout_toStartOf="@+id/txt_room_no" />

        <TextView
            android:id="@+id/txt_room_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/txt_hostel_name"
            android:layout_alignBottom="@+id/txt_hostel_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txt_bed_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Bed No. :"
            android:textColor="#4599ff"
            android:textSize="12sp"
            android:layout_alignTop="@+id/txt_hostel_name"
            android:layout_alignLeft="@+id/txt_room_no_label"
            android:layout_alignStart="@+id/txt_room_no_label" />


        <TextView
            android:id="@+id/txt_bed_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/txt_room_no_label"
            android:layout_alignBottom="@+id/txt_room_no_label"
            android:layout_toRightOf="@+id/txt_room_no_label"
            android:layout_toEndOf="@+id/txt_room_no_label" />

    </RelativeLayout>

</RelativeLayout>